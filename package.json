{
  "name": "boetos",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev --prefix backend\" \"npm run dev --prefix frontend\"",
    "test": "cd backend && jest --detectOpenHandles --forceExit",
    "test:watch": "cd backend && jest --watch",
    "test:coverage": "cd backend && jest --coverage",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "testTimeout": 30000,
    "detectOpenHandles": true,
    "forceExit": true,
    "verbose": true,
    "clearMocks": true,
    "resetMocks": true,
    "restoreMocks": true,
    "setupFilesAfterEnv": [
      "./backend/src/testUtils/testSetup.js"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^22.15.30",
    "@types/pg": "^8.15.4",
    "concurrently": "^9.2.0",
    "jest": "^30.0.3",
    "jest-environment-node": "^30.0.2",
    "pg": "^8.16.3",
    "supertest": "^7.1.1",
    "vite": "^6.3.5"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "dotenv": "^16.4.5",
    "framer-motion": "^12.19.1",
    "langchain": "^0.3.29",
    "openai": "^5.6.0",
    "react-time-picker": "^7.0.0",
    "react-toastify": "^11.0.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
